@model SongSectionFormModel

<div class="container">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="name" class="form-label">Name</label>
                <input type="text" id="name" class="form-control" asp-for="Name">
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="position" class="form-label">Position</label>
                <input type="number" id="position" class="form-control" asp-for="Position"></input>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="lyrics" class="form-label">Lyrics</label>
                <textarea  id="lyrics" cols="30" rows="10" class="form-control" asp-for="Lyrics"></textarea>
            </div>
        </div>
    </div>

