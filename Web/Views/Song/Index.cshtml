@model ICollection<SongViewModel>

@{
    ViewData["Title"] = "My songs";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
<h1>My songs</h1>
<table class="table">
    <thead>
    <tr>
        <th>Song</th>
        <th>Artist</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var song in Model)
    {
        <tr>

            <td>
                <a asp-action="Song" asp-route-id="@song.Id">
                    @song.Name
                </a>
            </td>
            <td>
                <img src="@song.Artist.ImageUrl" alt="@song.Artist.Name" width="60" height="60"/>
                @song.Artist.Name
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@song.Id" class="btn btn-secondary">
                    Edit
                </a>
                <a asp-action="Delete" asp-route-id="@song.Id" class="btn btn-danger">
                    Delete
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">
    Add song
</a>
</body>
</html>